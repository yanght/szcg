@{
    ViewBag.Title = "InsertCollecter";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget-box widget-color-blue ui-sortable-handle" style="opacity: 1; z-index: 0;">
            <!-- #section:custom/widget-box.options -->
            <div class="widget-header">
                <h5 class="widget-title bigger lighter">
                    <i class="ace-icon fa fa-pencil-square-o"></i>
                    填写监督员信息
                </h5>
            </div>
            <!-- /section:custom/widget-box.options -->
            <div class="widget-body">
                <div class="widget-main ">
                    <form class="form-horizontal input-line" role="form" name="collecter" id="collecter" method="post" action="/collector/addcollecter">
                        <!-- #section:elements.form -->
                        <div id="collecterdetail">
                            <script type="text/template" id="collecterdetailtpl">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 姓名：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="CollName" id="CollName" placeholder="" class="form-control" value="{{collecter.CollName}}" />
                                        <input type="hidden" name="CollCode" id="CollCode" value="{{collecter.CollCode}}" />
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 登录名：</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" name="LoginName" id="LoginName" value="{{collecter.LoginName}}" placeholder="" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 口令：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="PassWord" id="PassWord" placeholder="" class="form-control" value="{{collecter.PassWord}}" />
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 性别：</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="Sex" name="Sex">
                                            {{if collecter.Sex=="True"}}
                                            <option value="1" selected="selected">男</option>
                                            <option value="0">女</option>
                                            {{else}}
                                            <option value="1">男</option>
                                            <option value="0" selected="selected">女</option>
                                            {{/if}}

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 所属社区：</label>
                                    <div class="col-sm-4">
                                        <span class="input-icon input-icon-right">
                                            <input type="text" name="CommCode" id="CommCode" placeholder="" class="form-control" value="{{collecter.CommCode}}" />
                                            <i class="ace-icon fa fa-plus-circle bigger-120  blue"></i>
                                        </span>
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 网格号：</label>
                                    <div class="col-sm-4">
                                        <span class="input-icon input-icon-right">
                                            <input type="text" name="GridCode" id="GridCode" placeholder="" class="form-control" value="{{collecter.GridCode}}" />
                                            <i class="ace-icon fa fa-plus-circle bigger-120  blue"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 城管通号码：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="Mobile" id="Mobile" placeholder="" class="form-control" value="{{collecter.Mobile}}" />
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 年龄：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="Age" id="Age" placeholder="" class="form-control" value="{{collecter.Age}}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 身份证：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="Code" id="Code" placeholder="" class="form-control" value="{{collecter.Code}}" />
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 电话：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="HomeTel" id="HomeTel" placeholder="" class="form-control" value="{{collecter.HomeTel}}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 手机串码：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="IMEI" id="IMEI" placeholder="" class="form-control" value="{{collecter.IMEI}}" />
                                    </div>
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 轨迹上报间隔：</label>
                                    <div class="col-sm-4">
                                        <input type="text" name="TimeOut" id="TimeOut" placeholder="" class="form-control" value="{{collecter.TimeOut}}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 地址：</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="HomeAddress" id="HomeAddress" placeholder="" class="form-control" value="{{collecter.HomeAddress}}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label no-padding-right" for="form-field-1-1"> 备注：</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="Memo" id="Memo" placeholder="" class="form-control" value="{{collecter.Memo}}" />
                                    </div>
                                </div>

                            </script>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    depart.getCollecterDetail('@(Request["collcode"])');
</script>