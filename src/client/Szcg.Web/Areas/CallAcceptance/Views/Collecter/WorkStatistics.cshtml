@{
    Layout = null;
}
<title>Form Elements - Ace Admin</title>
<link rel="stylesheet" href="/content/assets/css/jquery-ui.custom.min.css" />
<link rel="stylesheet" href="/content/assets/css/chosen.css" />
<link rel="stylesheet" href="/content/assets/css/datepicker.css" />
<link rel="stylesheet" href="/content/assets/css/bootstrap-timepicker.css" />
<link rel="stylesheet" href="/content/assets/css/daterangepicker.css" />
<link rel="stylesheet" href="/content/assets/css/bootstrap-datetimepicker.css" />
<link rel="stylesheet" href="/content/assets/css/colorpicker.css" />

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <!--查询条件-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">查询条件</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-inline">
                        <label>区域：</label>
                        <select class="form-control" name="AreaId" id="AreaId">
                            <option value="">全部</option>
                        </select>

                        <label>街道：</label>
                        <select class="form-control" name="StreetId" id="StreetId">
                            <option value="">全部</option>
                        </select>

                        <label>案卷号：</label>
                        <input type="text" class="form-control" placeholder="" name="Projcode" id="Projcode">

                        <label>姓名：</label>
                        <input type="text" class="form-control" placeholder="" name="Name" id="Name">

                        <label>类型：</label>
                        <select class="form-control" name="Type" id="Type">
                            <option value="100">全部</option>
                            <option value="1">普通上报</option>
                            <option value="10">快速上报</option>
                        </select>


                        <label>时间 从：</label>
                        <div class="input-daterange input-group" data-date-format="yyyy-mm-dd">
                            <input type="text" class="input-sm form-control" name="beginTime" id="beginTime">
                            <span class="input-group-addon">
                                至
                            </span>
                            <input type="text" class="input-sm form-control" name="endTime" id="endTime" value="@(DateTime.Now.ToString("yyyy-MM-dd"))">
                        </div>
                        <button type="button" class="btn btn-info btn-sm" id="query">
                            查询
                        </button>
                        <button type="reset" class="btn btn-info btn-sm">
                            重置
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!--案卷列表-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">监督员工作任务统计列表</h5>
                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="1 ace-icon fa fa-chevron-up bigger-125"></i>
                    </a>
                </div>
                <div class="widget-toolbar">
                    <span id="taskmessage">
                       
                    </span>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <table id="collectertaskTB" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>案卷号</th>
                                <th>街道</th>
                                <th>普通上报</th>
                                <th>批转</th>
                                <th>立案</th>
                                <th>派遣</th>
                                <th>发送核查</th>
                                <th>核查完毕</th>
                                <th>结案</th>
                                <th>备注</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
<!-- page specific plugin scripts -->
