@{
    Layout = null;
}
<title>Form Elements - Ace Admin</title>
<link rel="stylesheet" href="/content/assets/css/jquery-ui.custom.min.css" />
<link rel="stylesheet" href="/content/assets/css/chosen.css" />
<link rel="stylesheet" href="/content/assets/css/datepicker.css" />
<link rel="stylesheet" href="/content/assets/css/bootstrap-timepicker.css" />
<link rel="stylesheet" href="/content/assets/css/daterangepicker.css" />
<link rel="stylesheet" href="/content/assets/css/bootstrap-datetimepicker.css" />
<link rel="stylesheet" href="/content/assets/css/colorpicker.css" />

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <!--查询条件-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">查询条件</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-inline">
                        <label>区域：</label>
                        <select class="form-control" name="areacode" id="areacode">
                            <option value="">全部</option>
                        </select>

                        <label>街道：</label>
                        <select class="form-control" name="streetcode" id="streetcode">
                            <option value="">全部</option>
                        </select>

                        <label>责任网格：</label>
                        <input type="text" class="form-control" placeholder="" name="gridcode" id="gridcode">

                        <label>姓名：</label>
                        <input type="text" class="form-control" placeholder="" name="name" id="name">

                        <label>登录名：</label>
                        <input type="text" class="form-control" placeholder="" name="loginname" id="loginname">

                        <label>城管通号：</label>
                        <input type="text" class="form-control" placeholder="" name="collmobile" id="collmobile">

                        <label>状态：</label>
                        <select class="form-control" name="isguard" id="isguard">
                            <option value="">全部</option>
                            <option value="1">在岗</option>
                            <option value="0">不在岗</option>
                        </select>

                        <button type="button" class="btn btn-info btn-sm" id="query">
                            查询
                        </button>
                        <button type="reset" class="btn btn-info btn-sm">
                            重置
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!--案卷列表-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">业务消息列表</h5>
                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="1 ace-icon fa fa-chevron-up bigger-125"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <table id="collecterlistTB" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>选择</th>
                                <th>状态</th>                              
                                <th>GPS状态</th>
                                <th>编号</th>
                                <th>姓名</th>
                                <th>责任网格</th>
                                <th>城管通号</th>
                                <th>登录号</th>
                                <th>所属街道</th>
                                <th>所属社区</th>
                                <th>版本号</th>                              
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
<!-- page specific plugin scripts -->
<!--[if lte IE 8]>
  <script src="/content/assets/js/excanvas.min.js"></script>
<![endif]-->

<script src="/content/assets/js/date-time/bootstrap-datepicker.min.js"></script>
<script src="/content/assets/js/date-time/bootstrap-timepicker.min.js"></script>
<script src="/content/assets/js/date-time/locales/bootstrap-datepicker.zh-CN.js"></script>
<script src="/content/assets/js/jquery.dataTables.min.js"></script>
<script src="/content/assets/js/jquery.dataTables.bootstrap.js"></script>

<script type="text/javascript">

    $(function () {
        ace.load_ajax_scripts([null], function () {

            var table = project.initCollecterTable();

            $("#query").click(function () {
                project.GetCollecterList(table);
            })

        });

    })


</script>
