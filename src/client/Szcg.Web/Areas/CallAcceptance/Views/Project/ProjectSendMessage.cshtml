@{
    Layout = null;
}

<form class="form-horizontal">
    <!-- #section:elements.form.input-state -->
    <div class="form-group">
        <label class="col-xs-12 col-sm-3 control-label no-padding-right">发送对象</label>

        <div class="col-xs-12 col-sm-9">
            <span class="block">
                <input type="text" id="collname" name="collname"  value="@Request["collname"]">
            </span>
        </div>
    </div>

    <!-- /section:elements.form.input-state -->
    <div class="form-group">
        <label class="col-xs-12 col-sm-3 col-md-3 control-label no-padding-right">消息主题</label>
        <div class="col-xs-12 col-sm-9">
            <span class="block ">
                <input type="text" id="title" name="title" >
            </span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-12 col-sm-3 control-label no-padding-right">消息内容</label>
        <div class="col-xs-12 col-sm-9">
            <span class="block">
                <textarea class="form-control" id="msgcontent" name="msgcontent"></textarea>
            </span>
        </div>

    </div>

    <input type="hidden" name="collcode" id="collcode" value="@(Request["collcode"])" />

</form>