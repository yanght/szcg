<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <!--查询条件-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">查询条件</h5>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <form class="form-inline">
                        <label>区域：</label>
                        <select class="form-control" name="AreaId">
                            <option value="">全部</option>
                        </select>
                        <label>街道：</label>
                        <select class="form-control" name="StreetId">
                            <option value="">全部</option>
                        </select>
                        <label>社区：</label>
                        <select class="form-control" name="SquareId">
                            <option value="">全部</option>
                        </select>
                        <label>案卷号：</label>
                        <input type="text" class="form-control" placeholder="" name="Projcode">
                        <label>上报时间：</label>
                        <div class="input-daterange input-group" data-date-format="yyyy-mm-dd">
                            <input type="text" class="input-sm form-control" name="startTime">
                            <span class="input-group-addon">
                                至
                            </span>
                            <input type="text" class="input-sm form-control" name="endTime" value="2016-12-1">
                        </div>
                        <button type="button" class="btn btn-info btn-sm" id="query">
                            查询
                        </button>
                        <button type="reset" class="btn btn-info btn-sm">
                            重置
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <!--案卷列表-->
        <div class="widget-box widget-color-blue">
            <div class="widget-header">
                <h5 class="widget-title">待办案卷列表</h5>
                <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                        <i class="1 ace-icon fa fa-chevron-up bigger-125"></i>
                    </a>
                </div>
                <div class="widget-toolbar no-border">
                    @if (Request["nodeid"] == "2")
                    {
                        <button onclick="project.operateProject('img_ajbl','@Request["buttoncode"]')" class="btn btn-xs bigger btn-yellow">
                            案卷登记
                        </button>
                    }

                    <button class="btn btn-xs bigger btn-yellow dropdown-toggle" data-toggle="dropdown">
                        操作
                        <i class="ace-icon fa fa-chevron-down icon-on-right"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                        <li>
                            <a href="#">导出电子表格</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="widget-body">
                <div class="widget-main">
                    <table id="projectlistTB" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>计时</th>
                                <th>督办</th>
                                <th class="hidden-480">来源</th>
                                <th><i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i> 案卷号</th>
                                <th>分类</th>
                                <th>大类</th>
                                <th>小类</th>
                                <th>时间</th>
                                <th>街道</th>
                                <th>社区</th>
                                <th>描述</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
