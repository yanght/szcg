<script type="text/javascript">
    var scripts = [null

        , "/content/assets/js/date-time/bootstrap-datepicker.min.js"
        , "/content/assets/js/date-time/bootstrap-timepicker.min.js"
        , "/content/assets/js/date-time/locales/bootstrap-datepicker.zh-CN.js"
        , "/content/assets/js/jquery.dataTables.min.js"
        , "/content/assets/js/jquery.dataTables.bootstrap.js",

        , null]

    ace.load_ajax_scripts(scripts, function () {

        //inline scripts related to this page

        $('.input-daterange').datepicker({ autoclose: true, language: 'zh-CN', });

        var table = project.initDelProjectTable('@Request["modelcode"]', '@Request["buttoncode"]', '@Request["nodeid"]');

        $("#query").click(function () {
            project.GetDelProjectList('@Request["modelcode"]', '@Request["buttoncode"]', '@Request["nodeid"]', table);
        })

    });


</script>
